@model IEnumerable<Dertrix.Models.Tribe>
<head>
    @{
        ViewBag.Title = "Tribes";
        var regUserOrgNavBar = Session["regOrgBrandButtonColour"].ToString();
    }


    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs/dt-1.10.23/datatables.min.css" />
    <link href="~/Main/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet">
</head>

<div class="jumbotron" style="height: 100vh; border-color: @regUserOrgNavBar; border-style:solid; border-width:medium;"> 
	<br />
	<br />
	<div>
		<hr />
		<div class="row">
			<div class="col-md-3">
				@{
					Html.RenderAction("AddTribe", "Tribes");
				}
			</div>
			<div class="col-md-3">
			</div>
			<div class="col-md-3">
			</div>
			<div class="col-md-3">
			</div>
		</div>
	</div>
	<hr />
	<br />
	<div class="panel panel-default">
		<table id="myTable" class="table table-bordered table-responsive table-condensed">
			<thead>

				<tr style="font-family:Trebuchet MS, Tahoma, Arial; color:#666; font-size:11px; background-color:white; border-style: groove; border-left: none; border-right:none; ">
					<th>
						@Html.DisplayNameFor(model => model.TribeName)
					</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr style="border-style: groove;">
						<td>
							@Html.DisplayFor(modelItem => item.TribeName)
						</td>
						<td>
							<div class="btn-group">
								<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
									Action <span class="caret"></span>
								</button>
								<ul class="dropdown-menu" style="background-color:white">
									<li><a href="#" onclick="EditTribe(@item.TribeId)">Edit tribe</a></li>
									@*<li><a href="#" onclick="ConfirmDelete(@item.TribeId)">Remove tribe</a></li>*@
								</ul>
							</div>
						</td>
					</tr>
				}
			</tbody>

		</table>
		<div>
			<p>@Html.ActionLink("Back", "SysAdminSetUp", "Home", "", new { @class = "RegUserOrgButtonColour" })</p>
		</div>
	</div>
</div>


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<input type="hidden" id="hiddenTribeId" />

@*Delete confirmation Modal*@
<div class="modal fade" id="tribeDeleteModal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<a href="#" class="close" data-dismiss="modal">&times;</a>
				<h3 class="modal-title">Remove tribe</h3>
			</div>
			<div class="modal-body">
				<h3>Are you sure you want to remove this tribe?</h3>
			</div>
			<div class="modal-footer">
				<a href="#" class="RegUserOrgButtonColour" data-dismiss="modal">Cancel</a>
				<a href="#" class="RegUserOrgButtonColour" onclick="DeleteTribe()">Confirm</a>
			</div>
		</div>
	</div>
</div>
@*Edit Class Details Modal*@
<div class="modal fade" id="TribeEditModal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<a href="#" class="close" data-dismiss="modal">&times;</a>
				<h3 class="modal-title">Edit tribe</h3>
			</div>
			<div class="modal-body" id="TribeEditBody"></div>
			<div class="modal-footer">
				<input type="button" value="Cancel" class="RegUserOrgButtonColour" id="cancel" data-dismiss="modal" />
				<input type="button" value="Update" class="RegUserOrgButtonColour" id="edtSubmit" />
			</div>
		</div>
	</div>
</div>
<script>
	var ConfirmDelete = function (ClassId) {
		$("#hiddenTribeId").val(ClassId);
		$("#tribeDeleteModal").modal('show');
	}
	var DeleteTribe = function () {
		var Tribe = $("#hiddenTribeId").val();
		$.ajax({
			type: "POST",
			url: "/Tribes/DeleteConfirmed/",
			data: { id: Tribe },
			success: function (response) {
				alert("Tribe deleted");
				$("#tribeDeleteModal").modal("hide");
				window.location.reload();
			}
		})
	}
</script>
<script>
	var EditTribe = function (Id) {
		$.ajax({
			type: "GET",
			url: "/Tribes/EditTribe",
			data: { Id: Id },
			success: function (response) {
				$("#TribeEditBody").html(response);
				$("#TribeEditModal").modal("show");
			}
		})
	}
</script>
<script>
	$("#edtSubmit").click(function () {
		var data = $("#TribeEditForm").serialize();
		$.ajax({
			type: "POST",
			url: "/Tribes/Edit",
			data: data,
			success: function (response) {
				alert("Tribe updated");
				$("#TribeEditModal").modal("hide");
				$("#TribeEditForm")[0].reset();
				window.location.reload();
			}
		})
	})
</script>



@section scripts{
	@Scripts.Render("~/bundles/jqueryval")
	@Scripts.Render("~/bundles/custom-validator")
	<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
	<script type="text/javascript" src="https://cdn.datatables.net/v/bs/dt-1.10.23/datatables.min.js"></script>

	<script>
		$(document).ready(function () {
			$('#myTable').DataTable(
				{
					"ordering": false,
				}
			);
		});
	</script>

}