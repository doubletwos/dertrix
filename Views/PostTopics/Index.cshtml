@model IEnumerable<Dertrix.Models.PostTopic>
<head>
    @{
        ViewBag.Title = "Post topics";
        var regUserOrgNavBar = Session["regOrgBrandButtonColour"].ToString();
    }
    <style>
		.der-body-content{
            border-color: @regUserOrgNavBar;
            border-style: double;
         }
    </style>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs/dt-1.10.23/datatables.min.css" />
    <link href="~/Main/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet">
</head>

<div id="content" class="der-body-content der-clearfix">
    <br />
    <br />
    <div>
        <hr />
        <div class="row">
            <div class="col-md-3">
                @{
                    Html.RenderAction("AddPostTopic", "PostTopics");
                }
            </div>
            <div class="col-md-3">
            </div>
            <div class="col-md-3">
            </div>
            <div class="col-md-3">
            </div>
        </div>
    </div>
    <hr />
    <br />
    <div class="panel panel-default">
        <table id="myTable" class="table table-bordered table-condensed table-striped table-hover table-responsive standard">
            <thead>

                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.PostTopicName)
                    </th>
                    <th>Select Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="border-style: groove;">
                        <td>
                            @Html.DisplayFor(modelItem => item.PostTopicName)
                        </td>
                        <td>
                            <div class="btn-group">
                                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Action <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu" style="background-color:white">
                                    <li><a href="#" onclick="EditPostTopic(@item.PostTopicId)">Edit post topic</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

        <div>
            <p>@Html.ActionLink("Back", "SysAdminSetUp", "Home", null, htmlAttributes: new { @class = "RegUserOrgButtonColour" })</p>
        </div>
    </div>
</div>


<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<input type="hidden" id="hiddenPostTopicId" />







@*Delete confirmation Modal*@
<div class="modal fade" id="PostTopicDeleteModal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<a href="#" class="close" data-dismiss="modal">&times;</a>
				<h3 class="modal-title">Remove post topic</h3>
			</div>
			<div class="modal-body">
				<h3>Are you sure you want to remove this topic?</h3>
			</div>
			<div class="modal-footer">
				<a href="#" class="RegUserOrgButtonColour" data-dismiss="modal">Cancel</a>
				<a href="#" class="RegUserOrgButtonColour" onclick="DeleteTopic()">Confirm</a>
			</div>
		</div>
	</div>
</div>
@*Edit religion Modal*@
<div class="modal fade" id="TopicEditModal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<a href="#" class="close" data-dismiss="modal">&times;</a>
				<h3 class="modal-title">Edit topic</h3>
			</div>
			<div class="modal-body" id="topicEditBody"></div>
			<div class="modal-footer">
				<input type="button" value="Cancel" class="RegUserOrgButtonColour" id="cancel" data-dismiss="modal" />
				<input type="button" value="Update" class="RegUserOrgButtonColour" id="edtSubmit" />
			</div>
		</div>
	</div>
</div>
<script>
	var ConfirmDelete = function (PostTopicId) {
		$("#hiddenPostTopicId").val(PostTopicId);
		$("#PostTopicDeleteModal").modal('show');
	}
	var DeleteTopic = function () {
		var Topic = $("#hiddenPostTopicId").val();
		$.ajax({
			type: "POST",
			url: "/PostTopics/DeleteConfirmed/",
			data: { id: Topic },
			success: function (response) {
				alert("Topic deleted");
				$("#PostTopicDeleteModal").modal("hide");
				window.location.reload();
			}
		})
	}
</script>
<script>
	var EditPostTopic = function (Id) {
		$.ajax({
			type: "GET",
			url: "/PostTopics/EditPostTopic",
			data: { Id: Id },
			success: function (response) {
				$("#topicEditBody").html(response);
				$("#TopicEditModal").modal("show");
			}
		})
	}
</script>
<script>
	$("#edtSubmit").click(function () {
		var data = $("#PostTopicEditForm").serialize();
		$.ajax({
			type: "POST",
			url: "/PostTopics/Edit",
			data: data,
			success: function (response) {
				alert("Topic updated");
				$("#TopicEditModal").modal("hide");
				$("#PostTopicEditForm")[0].reset();
				window.location.reload();
			}
		})
	})
</script>


@section scripts{
	@Scripts.Render("~/bundles/jqueryval")
	@Scripts.Render("~/bundles/custom-validator")
    <script src="~/Scripts/jquery-ui-1.13.1.min.js"></script>
	<script type="text/javascript" src="https://cdn.datatables.net/v/bs/dt-1.10.23/datatables.min.js"></script>

	<script>
		$(document).ready(function () {
			$('#myTable').DataTable(
				{
					"ordering": false,
				}
			);
		});
	</script>

}
