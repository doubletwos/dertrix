@model IEnumerable<Dertrix.Models.Org>
<head>
    @{
        ViewBag.Title = "Home";
        var regUserOrgNavBar = Session["regOrgBrandButtonColour"].ToString();
    }
    <link href="https://fonts.googleapis.com/css2?family=Exo+2&display=swap" rel="stylesheet">
    <link href="~/Main/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <style>
        .der-body-content {
            border-color: @regUserOrgNavBar;
            border-style: double;
        }
    </style>
</head>

<div id="content" class="der-body-content der-clearfix">
    <br />
    <br />
    @Html.Partial("_Widget_PG_Dashboard")
    <hr />

    <div class="row">
        <div class="col-md-6">
            <h3 style="font-family :'Exo 2', sans-serif;">
                School Calendar
                <i class="fa fa-calendar" style="color:blue;" aria-hidden="true"></i>
            </h3>
        </div>
        <div class="col-md-6">
            <h3 style="font-family :'Exo 2', sans-serif;">
                School News
                <i class="fa fa-newspaper-o" style="color:green;" aria-hidden="true"></i>
            </h3>
            @{
                Html.RenderAction("PostDisplayPanel", "Posts");
            }
        </div>

    </div>
</div>

