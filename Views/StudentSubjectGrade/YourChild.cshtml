@model IEnumerable<Dertrix.Models.StudentSubjectGrade>
<head>
    @{
        ViewBag.Title = "YourChild";
        var regUserOrgNavBar = Session["regOrgBrandButtonColour"].ToString();
    }
    <style>
		.der-body-content{
            border-color: @regUserOrgNavBar;
            border-style: double;
         }
    </style>
</head>


<div id="content" class="der-body-content der-clearfix">
    <br />
    <br />
    @Html.Partial("_Widget_PG_Dashboard")


    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                @{
                    Html.RenderAction("MyRegProfile", "RegisteredUsers");
                }
            </div>
            <div class="col-lg-6">

            </div>
        </div>
    </div>


    <table id="myTable" class="table table-bordered table-condensed table-striped table-hover table-responsive standard">
        <thead>

            <tr>


                <th>
                    Subject
                </th>
                <th>
                    1st Term Grade
                </th>
                <th>
                    2nd Term Grade
                </th>
                <th>
                    3rd Term Grade
                </th>
            </tr>

        </thead>


        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.SubjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstTerm_ExamGrade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SecondTerm_ExamGrade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ThirdTerm_ExamGrade)
                </td>

            </tr>
        }

    </table>
</div>




