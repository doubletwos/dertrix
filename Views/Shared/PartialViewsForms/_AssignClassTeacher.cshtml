@model Dertrix.Models.Class

<form id="AssignClassTeacherForm">

	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		@Html.HiddenFor(model => model.ClassId)
		@Html.HiddenFor(model => model.ClassRefNumb)
		@Html.HiddenFor(model => model.ClassIsActive)
		@Html.HiddenFor(model => model.OrgId)
		@Html.HiddenFor(model => model.ClassName)
		@Html.HiddenFor(model => model.TitleId)
		@Html.HiddenFor(model => model.Female_Students_Count)
		@Html.HiddenFor(model => model.Male_Students_Count)
		@Html.HiddenFor(model => model.Students_Count)

		<div class="form-group">
			@Html.LabelFor(model => model.ClassTeacherId, "Fullname", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownList("ClassTeacherId", null, htmlAttributes: new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.ClassTeacherId, "", new { @class = "text-danger" })
			</div>
		</div>

	</div>
</form>



