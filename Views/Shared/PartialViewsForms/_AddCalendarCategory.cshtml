@model Dertrix.Models.CalendarCategory

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<a href="#" class="RegUserOrgButtonColour" data-toggle="modal" data-target="#AddCategoryModal">
    <i class="fa fa-plus fa-lg" aria-hidden="true"></i>
    New Category
</a>

<div class="modal fade" id="AddCategoryModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title">New Category</h3>
            </div>
            <div class="modal-body">
                <form id="AddNewCategoryForm">

                    @Html.AntiForgeryToken()
                    @{
                        HtmlHelper.UnobtrusiveJavaScriptEnabled = false;
                    }

                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.LabelFor(model => model.CategoryName, "Category Name")
                                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="modal-footer">
                            <input type="reset" value="Cancel" class="RegUserOrgButtonColour" data-dismiss="modal" />
                            <input type="submit" value="Add Category" class="RegUserOrgButtonColour" id="btnSubmit" />
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
	$(document).ready(function () {
		$("#btnSubmit").on("click", function () {
            if ($("#AddNewCategoryForm").valid()) {
                var data = $("#AddNewCategoryForm").serialize();
			$.ajax({
				type: "POST",
                url: "/CalendarCategorys/Create",
				data: data,
				success: function (response) {
					alert("New Category Created");
					$("#AddCategoryModal").modal("hide");
                    $("#AddNewCategoryForm")[0].reset();
					window.location.reload();
				}
			})
			}
		})

	});
</script>



