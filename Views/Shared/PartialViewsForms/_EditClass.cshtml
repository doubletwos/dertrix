@model Dertrix.Models.Class
<form id="ClassEditForm">



	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		@Html.HiddenFor(model => model.ClassId)
		@Html.HiddenFor(model => model.ClassTeacherFullName)
		@Html.HiddenFor(model => model.ClassTeacherId)
		@Html.HiddenFor(model => model.ClassTeacher)
		@Html.HiddenFor(model => model.TitleId)
		@Html.HiddenFor(model => model.Students_Count)
		@Html.HiddenFor(model => model.Female_Students_Count)
		@Html.HiddenFor(model => model.Male_Students_Count)
		@Html.HiddenFor(model => model.ClassTeacher)


		<div class="form-group">
			@Html.LabelFor(model => model.ClassName, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.ClassName, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.ClassName, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.ClassRefNumb, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.ClassRefNumb, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.ClassRefNumb, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.ClassIsActive, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				<div class="checkbox">
					@Html.EditorFor(model => model.ClassIsActive)
					@Html.ValidationMessageFor(model => model.ClassIsActive, "", new { @class = "text-danger" })
				</div>
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.OrgId, "OrgId", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownList("OrgId", null, htmlAttributes: new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.OrgId, "", new { @class = "text-danger" })
			</div>
		</div>


	</div>


</form>