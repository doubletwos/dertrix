@model Dertrix.Models.RegisteredUser
@if (ViewBag.RegisteredUser != null)
{
    foreach (var item in ViewBag.RegisteredUser)
    {
        <table class="table table-bordered table-striped">
            <tr>
                <td>
                    <strong>Dertrix Id</strong>
                </td>
                <td>
                    @item.RegisteredUserId
                </td>
            </tr>
            <tr>
                <td>
                    <strong>Full Name</strong>
                </td>
                <td>
                    @item.ContactFullName
                </td>
            </tr>
            <tr>
                <td>
                    <strong>Class</strong>
                </td>
                <td>
                    @item.Class.ClassName
                </td>
            </tr>
            <tr>
                <td>
                    <strong>Gender</strong>
                </td>
                <td>
                    @item.Gender.GenderName
                </td>
            </tr>
            <tr>
                <td>
                    <strong>Religion</strong>
                </td>
                <td>
                    @item.Religion.ReligionName
                </td>
            </tr>
            <tr>
                <td>
                    <strong>Tribe</strong>
                </td>
                <td>
                    @item.Tribe.TribeName
                </td>
            </tr>
            <tr>
                <td>
                    <strong>Date Of Birth</strong>
                </td>
                <td>
                    @item.DateOfBirth.ToShortDateString()
                </td>
            </tr>
            <tr>
                <td>
                    <strong>Enrolment Date</strong>
                </td>
                <td>
                    @item.EnrolmentDate.ToShortDateString()
                </td>
            </tr>
        </table>
    }
}
